pipeline {
    agent any
    tools {
            maven 'maven'
            jdk 'jdk'
        }

    parameters {
            string(name: 'TEST_NAME', defaultValue: '', description: 'Enter the name of the test to run')
        }

    stages {
        stage('Build test code') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('Execute test') {
            steps {
                sh "mvn test -Dtest=${params.TEST_NAME}"
            }
        }
        stage('Generate allure report') {
            steps {
                script {
                    allure([
                            includeProperties: false,
                            jdk              : '',
                            properties       : [],
                            reportBuildPolicy: 'ALWAYS',
                            results          : [[path: 'target/allure-results']]
                    ])
                }
            }
        }
    }
}